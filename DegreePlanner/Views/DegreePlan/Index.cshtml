@model DegreePlanner.Models.ViewModels.DegreePlanVM

<div class="row">


    <div class="row mb-4">

        <div class="col-md-6 text-right">
            <!-- Heading -->
            <h2 class="display-5">
                PLAN YOUR DEGREE
            </h2>
        </div>
    </div>


    <div class="col-md-8">

        <!-- Term List Section -->
        <div>
            @foreach (var termWithCourses in Model.TermsWithCourses)
            {
                <div class="term-section">
                    <div class="term-header d-flex justify-content-between align-items-center" data-toggle="collapse" href="#termCourses-@termWithCourses.Term.Id" aria-expanded="false" aria-controls="termCourses-@termWithCourses.Term.Id">
                        <div>
                            <h5 class="mb-0">@termWithCourses.Term.Name</h5>
                            <small>@termWithCourses.Term.StartDate.Value.ToString("MMMM d, yyyy") to @termWithCourses.Term.EndDate.Value.ToString("MMMM d, yyyy")</small>
                        </div>
                        <div>
                            <!-- Edit and Delete Icons for Term -->
                            <a href="@Url.Action("Upsert", "Term", new { id = termWithCourses.Term.Id })" class="text-decoration-none me-2">
                                <i class="bi bi-pencil term-icon"></i>
                            </a>
                            <a href="@Url.Action("Delete", "Term", new { id = termWithCourses.Term.Id })" class="text-decoration-none text-danger">
                                <i class="bi bi-trash term-icon"></i>
                            </a>
                            <i class="bi bi-caret-down-fill term-caret ms-2"></i>
                        </div>
                    </div>

                    <div class="collapse mt-2" id="termCourses-@termWithCourses.Term.Id">
                        <ul class="list-group">
                            @if (termWithCourses.Courses.Any())
                            {
                                @foreach (var course in termWithCourses.Courses)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <!-- Course name as a clickable link to the Course Detail page -->
                                            <a class="course-name "href="@Url.Action("Detail", "Course", new { id = course.Id })" class="course-link">
                                                <strong>@course.Name</strong>
                                            - @course.Status - @course.StartDate.ToShortDateString()-@course.EndDate.ToShortDateString()
                                        </div>
                                        <div>
                                            <!-- Edit and Delete Icons for Course -->
                                            <a href="@Url.Action("Upsert", "Course", new { id = course.Id })" class="text-decoration-none me-2">
                                                <i class="bi bi-pencil course-icon"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", "Course", new { id = course.Id })" class="text-decoration-none text-danger">
                                                <i class="bi bi-trash course-icon"></i>
                                            </a>
                                        </div>
                                    </li>
                                }
                            }
                            else
                            {
                                <li class="list-group-item text-muted">No courses in this term.</li>
                            }
                        </ul>
                    </div>
                </div>
                <hr />
            }
        </div>

    </div>

    <!-- Right column: Planning actions -->
    <div class="col-md-3 text-right planning">
        <h3>Tools</h3>
        <p>Customize your own path to your degree start to finish.</p>
        <div class="d-flex flex-column">
            <a href="@Url.Action("Upsert", "Term", null)" class="btn btn-primary mb-2">Add Term</a>
            <a href="@Url.Action("Upsert", "Course", null)" class="btn btn-primary mb-2">Add Course</a>
        </div>
        <!-- Expand and Collaspe all buttons -->

        <div class="mb-3">
            <button id="expandAll" class="btn btn-info btn-sm">Expand All</button>
            <button id="collapseAll" class="btn btn-dark btn-sm">Collapse All</button>
        </div>

    </div>
</div>

<!-- Modal for displaying course details -->
<div id="courseDetailsModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Course Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Course details will be loaded here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function viewCourseDetails(courseId) {
            $.get('@Url.Action("CourseDetails", "DegreePlan")', { id: courseId })
                .done(function (data) {
                    $('#courseDetailsModal .modal-body').html(data);
                    $('#courseDetailsModal').modal('show');
                })
                .fail(function () {
                    console.error('Failed to load course details.');
                });
        }

        $(document).ready(function () {
            // Caret toggle logic
            $('.term-header').click(function () {
                var target = $(this).attr('href');  // Get the target collapse ID
                $(target).collapse('toggle');  // Toggle collapse

                var $caret = $(this).find('.term-caret');
                if ($caret.hasClass('bi-caret-down-fill')) {
                    $caret.removeClass('bi-caret-down-fill').addClass('bi-caret-up-fill');
                } else {
                    $caret.removeClass('bi-caret-up-fill').addClass('bi-caret-down-fill');
                }
            });

            // Expand and collapse all logic
            $('#expandAll').click(function () {
                $('.collapse').collapse('show');
                $('.term-caret').removeClass('bi-caret-down-fill').addClass('bi-caret-up-fill');
            });

            $('#collapseAll').click(function () {
                $('.collapse').collapse('hide');
                $('.term-caret').removeClass('bi-caret-up-fill').addClass('bi-caret-down-fill');
            });
        });
    </script>
}


<style>

    .course-name{
        color: black;
        text-decoration:none;
        transition: color 0.3s;
    }
    .course-name:hover{
            color: cornflowerblue
    }

    .term-icon, .course-icon {
        font-size: 0.8rem; /* Adjust size as needed */
        opacity: 0.7; /* Slightly transparent */
    }

        .term-icon:hover, .course-icon:hover {
            opacity: 1; /* Fully opaque on hover */
        }


    .term-section {
        background-color: #f8f9fa;
        padding: 15px;
        margin-bottom: 10px;
        border-radius: 8px;
    }

    .term-header {
        padding: 10px;
        cursor: pointer;
        border-radius: 5px;
    }

        .term-header:hover {
            background-color: #f8f9fa
        }

    .term-caret {
        transition: transform 0.3s;
    }

    .planning h3 {
        text-align: center;
        margin-bottom: 10%
    }

    .planning {
        justify-content: center;
        padding: 10px;
    }
    #expandAll, #collapseAll {
        margin-top: 10%;
        border-radius: 2px;
    }

</style>
