@model IEnumerable<DegreePlanner.Models.Course>

@if (Model != null && Model.Any())
{
    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var course in Model)
        {
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@course?.Name</h5>
                        <p class="card-text text-muted">Status: @course?.Status</p>

                        @if (!string.IsNullOrWhiteSpace(course?.Description))
                        {
                            <!-- Course description with limited display to one line -->
                            <small class="text-secondary description-text">@Html.Raw(@course?.Description)</small>

                        }
                        else
                        {
                            <small class="text-secondary description-text">No Description</small>
                        }

                        <!-- Icon and small "View Details" text -->
                        <button class="btn btn-link" onclick="viewCourseDetails(@course.Id)">
                            <i class="bi bi-exclamation-circle"></i>
                            <small class="ms-1">View Details</small>
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No courses available for this term.</p>
}

<style>
    .description-text {
        display: block;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 100%; /* Ensure it takes the full width of the card */
    }
</style>

