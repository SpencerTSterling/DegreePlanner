@model List<Term>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Term List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Term" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Term
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Term Name
                </th>
                <th>
                    Start Date
                </th>
                <th>
                    End Date
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.Id))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.StartDate?.ToString("yyyy-MM-dd")</td>
                    <td>@obj.EndDate?.ToString("yyyy-MM-dd")</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Term" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Term" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
