@model Term

<form method="post">
        <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Term</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="StartDate" class="p-0"></label>
            <input asp-for="StartDate" type="date" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="EndDate" class="p-0"></label>
            <input asp-for="EndDate" type="date" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete Term</button>
        <a asp-controller="DegreePlan" asp-action="Index" class="p-3" style="width:150px">Cancel</a>
    </div>
</form>
