@model DegreePlanner.Models.ViewModels.TermVM

@{
    ViewData["Title"] = Model.Term.Id == 0 ? "Create Term" : "Edit Term";
}

<h2>@(Model.Term.Id == 0 ? "Create" : "Edit") Term</h2>
<form asp-action="Upsert">
    <input asp-for="Term.Id" hidden />
    <div class="form-group">
        <label asp-for="Term.Name" class="control-label"></label>
        <input asp-for="Term.Name" class="form-control" />
        <span asp-validation-for="Term.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Term.StartDate" class="control-label"></label>
        <input asp-for="Term.StartDate" class="form-control" />
        <span asp-validation-for="Term.StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Term.EndDate" class="control-label"></label>
        <input asp-for="Term.EndDate" class="form-control" />
        <span asp-validation-for="Term.EndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="@(Model.Term.Id == 0 ? "Create" : "Update")" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
