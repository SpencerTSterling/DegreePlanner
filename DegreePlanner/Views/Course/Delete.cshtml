@model Course

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Course</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text"  disabled class="form-control" />
        </div>
        <div class="form-group mb-3 row p-1">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" type="text" disabled class="form-control"></textarea>
        </div>
        <div class="form-group mb-3 row p-1">
            <label asp-for="StartDate" class="p-0"></label>
            <input asp-for="StartDate" type="date" disabled class="form-control" />
        </div>
        <div class="form-group mb-3 row p-1">
            <label asp-for="EndDate" class="p-0"></label>
            <input asp-for="EndDate" type="date" disabled class="form-control" />
        </div>
        <div class="form-group mb-3 row p-1">
            <label asp-for="Status" class="control-label"></label>
            <select asp-for="Status" disabled class="form-control">
                <option value="Active">Active</option>
                <option value="Planned">Planned</option>
                <option value="Completed">Completed</option>
            </select>
        </div>
        <div class="form-group mb-3 row p-1">
            <label asp-for="TermId">Term</label>
            <select asp-for="TermId" disabled class="form-select" asp-items="ViewBag.TermList"></select>
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete Course</button>
        <a asp-controller="Course" asp-action="Index" class="p-3" style="width:150px">Cancel</a>
    </div>
</form>

<!-- Validation Script-->
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
        // client-side validation
    }
}