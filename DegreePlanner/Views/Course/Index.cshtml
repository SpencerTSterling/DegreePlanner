@model List<Course>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Course List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Course" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Course
            </a>
        </div>
    </div>


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Term
            </th>
            <th>
                Course Name
            </th>
            <th>
                Description
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Status
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(u=>u.Id))
        {
            <tr>
                <td>@obj.Term.Name</td>
                <td>@obj.Name</td>
                <td>@Html.Raw(@obj.Description)</td>
                <td>@obj.StartDate.ToString("yyyy-MM-dd")</td>
                <td>@obj.EndDate.ToString("yyyy-MM-dd")</td>
                <td>@obj.Status</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Course" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square">Edit</i>
                        </a>
                            <a asp-controller="Course" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3-fill">Delete</i>
                        </a>
                    </div>
                </td>
            </tr>            
        }

    </tbody>

</table>

</div>